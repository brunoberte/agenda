
{% extends 'basetemplate.html.twig' %}

{% block body %}
    <h2>Contacts <button type="button" class="btn btn-outline-primary btn-sm d-inline" data-id="" data-toggle="modal" data-target="#formModal">Add</button></h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>e-mail</th>
                    <th>Main Number</th>
                    <th>Secondary Number</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.first_name }}</td>
                    <td>{{ contact.last_name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.main_number }}</td>
                    <td>{{ contact.secondary_number }}</td>
                    <td style="white-space: nowrap">
                        <button type="button" class="btn btn-outline-primary btn-sm" data-id="{{ contact.id }}" data-toggle="modal" data-target="#formModal">Edit</button>
                        <button type="button" class="btn btn-outline-primary btn-sm btn-delete" data-id="{{ contact.id }}">Delete</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" method="post" data-toggle="validator" role="form">
                        <input type="hidden" name="id" value="" />
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputFirstName">First Name</label>
                                <input type="text" class="form-control" id="inputFirstName" name="first_name" placeholder="First Name" value="" required pattern="^[a-zA-Z\s]{3,}$" />
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputLastName">Last Name</label>
                                <input type="text" class="form-control" id="inputLastName" name="last_name" placeholder="Last Name" value=""  required pattern="^[a-zA-Z\s]{3,}$" />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email" value="" required />
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputMainNumber">Main Number</label>
                                <input type="text" class="form-control format_phone" name="main_number" id="inputMainNumber" placeholder="Main Number" value="" required pattern="^\([0-9]{2}\) [0-9]{4,5}-[0-9]{4}$" />
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputSecondaryNumber">Secondary Number</label>
                                <input type="text" class="form-control format_phone" name="secondary_number" id="inputSecondaryNumber" placeholder="Secondary Number" value="" pattern="^\([0-9]{2}\) [0-9]{4,5}-[0-9]{4}$" />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
